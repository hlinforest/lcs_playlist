<% if @message %>
  <div><%= @message %></div> 
<% end %>

<form method="POST" action="/login">
  <div>
    <label>Email</label>
    <input type="text" name="email" value="email">
  </div>
  <div>
    <label>Password</label>
    <input type="password" name="password" value="email">
  </div>
  <div>
    <input type="submit">
  </div>

  <a href="/register">Register</a>
</form>

